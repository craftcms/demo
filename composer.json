{
  "require": {
    "craftcms/cms": "^3.7.0-beta.3",
    "vlucas/phpdotenv": "^2.4.0",
    "craftcms/redactor": "^2.7.4"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "8.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
